        </Style>
        <Style TargetType="{x:Type RadioButton}" BasedOn="{StaticResource {x:Type RadioButton}}">
            <Setter Property="ToolTipService.ShowOnDisabled" Value="true"/>
        </Style>
    </Window.Resources>

