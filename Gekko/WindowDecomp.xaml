                <TextBlock Name="textBlock2" Text="Decimals:" Margin="0,0,0,0" Grid.RowSpan="2" ToolTip="Change number of decimals" />
                <Button Margin="5,-0,0,0" Name="button2" ToolTip="More decimals" Click="button2_Click" FontSize="10" AllowDrop="False" HorizontalAlignment="Left" Width="18.875" Height="18" Opacity="0.7">.00</Button>
                <Button HorizontalAlignment="Right" Margin="2,0,0,0" Name="button3" Width="18" Height="18" ToolTip="Fewer decimals" Click="button3_Click" FontSize="10" Opacity="0.7">.0</Button>
            </StackPanel>

            <Grid Grid.Column="11" Grid.Row="5" Height="23"  VerticalAlignment="Top">
                <TextBox Width=" 30" x:Name="txtNum" x:FieldModifier="private" Text="0" TextChanged="txtNum_TextChanged" Margin="3,2,13,3" />
                <Button x:Name="cmdUp" x:FieldModifier="private" FontSize="6" BorderThickness="0" Padding="0,-1,0,0" Content="▲" Width="10" Click="cmdUp_Click" Margin="33,2,1,13" />
                <Button x:Name="cmdDown" x:FieldModifier="private" FontSize="6" BorderThickness="0" Padding="0,-1,0,0" Content="▼" Width="10" Click="cmdDown_Click" Margin="33,12,1,3" />
            </Grid>

            <Button Name="button1" Visibility="Collapsed" Click="button1_Click" ToolTip="Update values in table with newest from Gekko databanks (i.e., after simulation or opening databanks)" Grid.Column="11" Margin="17.27,2.529,34.208,0" Grid.Row="5" Height="22" Opacity="0.8" Content="Refresh">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="5"/>
                    </Style>
                </Button.Resources>
            </Button>


        </Grid>


        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" Name="splitterHorizontal" />
                <ColumnDefinition Width="5" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Grid HorizontalAlignment="Left">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" Name="splitterVertical" />
                    <RowDefinition Height="5" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility= "Auto" HorizontalScrollBarVisibility="Auto" Margin="10,0,0,0" Focusable="False" Name="scrollView1" BorderThickness="10" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                    <Border BorderThickness="0" BorderBrush="Black" Name="canvasBorder">
                        <Canvas HorizontalAlignment="Left" VerticalAlignment="Top" Height="{Binding ElementName=grid1, Path=ActualHeight}" Width="{Binding ElementName=grid1, Path=ActualWidth}" Name="canvas">
                            <DockPanel Canvas.Left="{Binding ElementName=frezenBorder, Path=ActualWidth}" Canvas.Top="{Binding ElementName=frezenBorder2, Path=ActualHeight}" Name="dockPanel1">
                                <Grid Name="grid1">
                                </Grid>
                            </DockPanel>
                            <Border x:Name="frezenBorder" Background="White" Canvas.Left="{Binding HorizontalOffset, Mode=OneWay, RelativeSource={RelativeSource Mode=FindAncestor,AncestorType={x:Type ScrollViewer}}}" >
                                <Grid Name="grid1Left">
                                </Grid>
                            </Border>
                            <Border x:Name="frezenBorder2" Background="White" Canvas.Top="{Binding VerticalOffset, Mode=OneWay, RelativeSource={RelativeSource Mode=FindAncestor,AncestorType={x:Type ScrollViewer}}}" >
                                <Grid Background="Yellow" Name="grid1Top">
                                </Grid>
                            </Border>
                            <Border Background="White" Canvas.Top="{Binding VerticalOffset, Mode=OneWay, RelativeSource={RelativeSource Mode=FindAncestor,AncestorType={x:Type ScrollViewer}}}" 
                                Canvas.Left="{Binding HorizontalOffset, Mode=OneWay, RelativeSource={RelativeSource Mode=FindAncestor,AncestorType={x:Type ScrollViewer}}}" Name="frezenBorderUpperLeft">
                                <Grid Name="gridUpperLeft"></Grid>
                            </Border>
                        </Canvas>
                    </Border>
                </ScrollViewer>

                <GridSplitter Grid.Row="1" Height="5" HorizontalAlignment="Stretch" />

                <TabControl Grid.Row="2"  Margin="0, 5, 0, 0">
                    <TabItem Header="Equations">
                        <ScrollViewer Name="scrollViewerDecomp1">
                            <RichTextBox  Background="Transparent" BorderThickness="0" IsReadOnly="True" Name="equation"  FontSize="12" FontFamily="Courier New" HorizontalAlignment="Left" VerticalAlignment="Top" Padding="10">
                                <RichTextBox.Resources>
                                    <Style TargetType="{x:Type Paragraph}">
                                        <Setter Property="Margin" Value="0" />
                                    </Style>
                                </RichTextBox.Resources>
                            </RichTextBox>
                        </ScrollViewer>
                    </TabItem>
                    <TabItem Header="Code">
                        <ScrollViewer Name="scrollViewerDecomp2">
                            <RichTextBox Background="Transparent" BorderThickness="0" IsReadOnly="True" Name="code"  FontSize="12" FontFamily="Courier New" HorizontalAlignment="Left" VerticalAlignment="Top" Padding="10">
                                <RichTextBox.Resources>
                                    <Style TargetType="{x:Type Paragraph}">
                                        <Setter Property="Margin" Value="0" />
                                    </Style>
                                </RichTextBox.Resources>
                            </RichTextBox>
                        </ScrollViewer>
                    </TabItem>
                </TabControl>

            </Grid>
            <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Stretch" />
            <ListView Grid.Column="2" Name="listViewRowsColsFilters" HorizontalAlignment="Left" 
                      MaxWidth="300"
                      ScrollViewer.VerticalScrollBarVisibility="Auto"
                      ScrollViewer.HorizontalScrollBarVisibility="Auto"       
                      ItemContainerStyle="{StaticResource ItemContStyle}"
                      Margin="4,4,0,4"
                      Padding="0"
                      SelectionMode="Single"
                      FontFamily="Calibri" 
                      FontSize="13"       
                      Height="Auto" SelectionChanged="listView_SelectionChanged">

                <ListView.ItemTemplate>
                    <DataTemplate>
                        <DockPanel>
                            <TextBlock Text="{Binding Pivot_Text}" FontWeight="{Binding Pivot_FontWeight}" HorizontalAlignment="Left" ToolTip="Besides selecting, you may drag-and-drop fields between Rows/Columns." />
                            <TextBlock Text="   " HorizontalAlignment="Left" />
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                <StackPanel Width="25" Orientation="Horizontal" HorizontalAlignment="Right" Visibility="{Binding Pivot_ButtonVisible3}" >
                                    <Button Width="20"  Height="20" Padding="1,1,1,1"  Opacity="0.3"  Click="OnButtonClick" HorizontalAlignment="Right">...</Button>
                                </StackPanel>
                                <StackPanel Width="25" Orientation="Horizontal" HorizontalAlignment="Right" Visibility="{Binding Pivot_ButtonVisible1}" >
                                    <ComboBox Width="20" Height="20" Padding="1,1,1,1"  Opacity="0.5" ItemsSource="{Binding Pivot_Sublist}" SelectionChanged="ComboBox_SelectionChanged" HorizontalAlignment="Right" />
                                </StackPanel>
                                <ToggleButton Click="ListButton2_Click" Style="{StaticResource ToggleButtonWindowClose}" Visibility="{Binding Pivot_ButtonVisible2}" />
                            </StackPanel>
                        </DockPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Grid>
    </DockPanel>


</Window>
    
    
