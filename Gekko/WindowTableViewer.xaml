<Window x:Class="Gekko.WindowTableViewer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Gekko"
             mc:Ignorable="d" Height="350" Width="350"
             >
    <DataGrid AlternationCount="2" AlternatingRowBackground="WhiteSmoke"
             HorizontalGridLinesBrush="LightGray" VerticalGridLinesBrush="LightGray"
             x:Name="grid1"  ItemsSource="{Binding}" 
             IsReadOnly="True" AutoGenerateColumns="True">
        <DataGrid.ColumnHeaderStyle>
            <Style TargetType="{x:Type DataGridColumnHeader}">                
                <Setter Property="Padding" Value="25,2,25,2"/> 
            </Style>
        </DataGrid.ColumnHeaderStyle>

    </DataGrid>
    
</Window>
