        <TextBox x:Name="textBox6" HorizontalAlignment="Left" Height="22" Margin="14,248,0,0" TextWrapping="Wrap" Text="Wipe and copy files to c:\tools\tmp\gekko_files" VerticalAlignment="Top" Width="359"/>
